<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between mb-6 flex-wrap">
    <h1 class="font-bold text-3xl mb-6">Edit booking_type</h1>
    <% if @booking_type.persisted? %>
    <%= button_to 'Destroy', @booking_type, method: :delete, class: "text-red-700 underline", data: { turbo_confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <%= render 'form', booking_type: @booking_type %>
</div>
