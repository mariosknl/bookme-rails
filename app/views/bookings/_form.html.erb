<%= form_with(model: booking) do |form| %>
<% if booking.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% booking.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :status, class: label_class %>
          <%= form.number_field :status, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :first_name, class: label_class %>
          <%= form.text_field :first_name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :last_name, class: label_class %>
          <%= form.text_field :last_name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :email, class: label_class %>
          <%= form.text_field :email, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :start_at, class: label_class %>
          <%= form.datetime_field :start_at, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :end_at, class: label_class %>
          <%= form.datetime_field :end_at, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if booking.persisted? %>
<%= link_to "Cancel", booking, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", bookings_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
